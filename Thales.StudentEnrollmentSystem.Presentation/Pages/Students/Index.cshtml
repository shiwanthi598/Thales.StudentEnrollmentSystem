@page
@model Thales.StudentEnrollmentSystem.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info" asp-page="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger" asp-page="Delete" asp-route-id="@student.Id">Delete</a>
                    <a class="btn btn-secondary" asp-page="Details" asp-route-id="@student.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
